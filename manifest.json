{
  "name": "GoFimaGo!",
  "description": "Minimalist todo list with Supabase sync",
  "version": "2.0.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "https://jkyhbvihckgsinhoygey.supabase.co/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Open GoFimaGo!",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
